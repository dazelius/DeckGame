{
  "compilerOptions": {
    /* 기본 설정 */
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    
    /* 엄격한 타입 체크 (점진적으로 활성화) */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    
    /* 출력 설정 - 순수 JS 프로젝트이므로 출력 비활성화 */
    "noEmit": true,
    
    /* 모듈 해결 */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    /* JS 파일 허용 */
    "allowJs": true,
    "checkJs": false,
    
    /* 기타 */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    "backup_*",
    "*.js"
  ]
}

